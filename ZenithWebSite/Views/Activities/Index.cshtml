@model IEnumerable<ZenithDataLib.Models.Activity>

@{
    ViewBag.Title = "Index";
}

<h2 class="title">Activities In 2017</h2>

<p>
    @Html.ActionLink("Create an activity", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td align="center">
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td align="center">
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        <td align="center">
            @Html.ActionLink("Edit", "Edit", new { id=item.ActivityId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ActivityId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ActivityId })
        </td>
    </tr>
}

</table>
